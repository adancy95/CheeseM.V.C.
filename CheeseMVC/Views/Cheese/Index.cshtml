@model List<CheeseMVC.Models.Cheese>

<h1>My Cheese</h1>

<p><a asp-controller="Cheese" asp-action="Add">Add Cheese</a></p>
@if (Model.Count == 0)
{
    <p>No Cheeses Yet</p>

}

<table class="table">
    <tr>
        <th> Name </th>
        <th> Description</th>
        <th>Type</th>
    </tr>
    @foreach(var cheese in Model)
    {
       
            <tr>
                <td> @cheese.Name</td>
                <td>@cheese.Description</td>
                <td>@cheese.Type</td>
            </tr>
    }
</table>


